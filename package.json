{
  "private": true,
  "type": "module",
  "name": "chitchat-cli",
  "version": "0.2.1",
  "main": "src/index.js",
  "eslintConfig": {
    "root": true,
    "extends": "@epreston/eslint-config",
    "rules": {
      "no-console": "off",
      "prettier/prettier": "off"
    }
  },
  "prettier": "@epreston/prettier-config",
  "scripts": {
    "start": "node ./src/index.js",
